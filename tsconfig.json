{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ES2022",
    "composite": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["node", "vitest", "vitest/globals"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["./src/**/*", "./__test__/**/*", "./vitest.config.ts"],
  "exclude": ["node_modules"]
}

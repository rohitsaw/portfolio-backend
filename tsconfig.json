{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ES2022",
    "composite": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "@types/jest"],
    "sourceMap": true,

    "allowJs": true,
    "checkJs": false
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["__test__", "node_modules"],
  "types": ["node", "express", "jest"]
}
